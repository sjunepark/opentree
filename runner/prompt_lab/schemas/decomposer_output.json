{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["summary", "children"],
  "properties": {
    "summary": {
      "type": "string"
    },
    "children": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal", "acceptance", "next"],
        "properties": {
          "title": { "type": "string" },
          "goal": { "type": "string" },
          "acceptance": {
            "type": "array",
            "items": { "type": "string" }
          },
          "next": {
            "type": "string",
            "enum": ["execute", "decompose"]
          }
        }
      }
    }
  }
}
