{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TreeDecision",
  "type": "object",
  "additionalProperties": false,
  "required": ["decision", "summary", "children"],
  "properties": {
    "decision": {
      "type": "string",
      "enum": ["execute", "decompose"]
    },
    "summary": {
      "type": "string"
    },
    "children": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "goal", "acceptance"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "goal": {
            "type": "string",
            "minLength": 1
          },
          "acceptance": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
